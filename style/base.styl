html, body
  background none
  color $brand-primary
  font-family serif
  min-height 100%
  font-size 20px

html
  background-image url('/style/pattern.png')
  background-position center top
  background-size 60px 60px

.wrapper
  background-color $background-primary
  width 640px
  margin 35px auto 240px auto
  padding 15px
  border 5px solid $brand-highlight
  overflow auto

p
  text-align justify

  + p
    margin-top 0

p.large
  font-size 38px
  text-align center
  margin 70px 0

li + li
  margin-top 0

.emblem
  width 100%

h1
  margin-top 50px
  margin-bottom 50px
  text-align center
  font-weight normal
  font-size 28px

h2
  margin-top 50px
  margin-bottom 10px
  font-size 32px
  font-weight bold

h3
  font-weight normal
  font-size 20px

hr
  margin 50px 0 100px 0
  border 0
  border-bottom 1.1px solid $brand-primary

div.attending
  margin 0px auto 50px auto
  width 480px

label
  font-weight normal

input[type=text]
  border 0
  border-bottom 1px solid $brand-primary
  padding-left 10px
  padding-right 10px
  margin-bottom 10px
  border-radius 0
  font-size 28px
  color $brand-primary
  font-family serif
  width 100%
  
  &:focus
    outline 0

a
  color $brand-secondary

label.comments
  margin-top 20px
  display block
  span
    display block
  textarea
    margin-top 5px
    margin-bottom 30px
    width 100%
    height 120px
    display block
    border 1px solid $brand-primary
    resize vertical
    padding 10px 20px
    color $brand-primary
    font-size 18px

input[type=checkbox]
  display none
input[type=checkbox] + span
  display inline-block
  border 1px solid $brand-primary
  width 64px
  height 64px
  margin 5px 15px 15px 0px
  border-radius 32px
  vertical-align middle
  font-size 24px
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  text-align center
  line-height 64px
  &:before
    content 'NO'
input[type=checkbox]:checked + span
  background-color $brand-primary
  color white
  &:before
    content 'YES'
label span
  cursor pointer
  font-size 24px

button[type="submit"]
  float right
  border 1px solid $brand-primary
  background-color white
  font-size 20px
  color $brand-primary
  padding 10px 20px
  &:active
    color white
    background-color $brand-primary