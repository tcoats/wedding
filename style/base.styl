html, body
  background none
  color $brand-primary
  font-family: serif;

body
  border 10px solid $brand-highlight

html
  background-image url('/style/pattern.png')
  background-size 10vw 10vw

.wrapper
  margin -10px

.nb-top
  background $background-primary
  clip-path polygon(50vw 0vw, 85vw 10vw, 85vw 15vw, 15vw 15vw, 15vw 10vw)
  height 15vw
  margin-top 10vw

.nb-section
  background $background-primary
  padding 1.5em 15vw
  clip-path polygon(10vw -1%, 90vw -1%, 90vw 101%, 10vw 101%)

.nb-bottom
  background $background-primary
  clip-path polygon(85vw 0vw, 85vw 5vw, 50vw 15vw, 15vw 5vw, 15vw 0vw)
  height 15vw
  margin-bottom 10vw

.nb + .nb
  margin-top 0

.emblem
  width 100%
  height 12vw
  padding-top 2.5vw

* + *
  margin-top 1.5em

p
  text-align justify

  + p
    margin-top 0
    text-indent 2em

h1
  text-align center
  margin-top 10vw
  margin-bottom 5vw
  font-size 4vw
  font-weight normal

label
  font-weight normal

input[type=text]
  border 0
  border-bottom 1px solid $brand-primary
  padding-left 10px
  padding-right 10px
  margin 3px
  border-radius 0
  
  &:focus
    outline 0

input[type=checkbox]
  display none
input[type=checkbox] + span
  display inline-block
  border 1px solid $brand-primary
  width 32px
  height 32px
  margin 5px 10px 15px 10px
  border-radius 16px
  cursor pointer
  vertical-align middle
input[type=checkbox]:checked + span
  background-color $brand-primary
label span
  font-size 4vw

@media (min-width: 640px)
  h1
    margin-top 64px
    margin-bottom 32px
    font-size 25.5px

